		    Station:
		    <%= link_to "#{Song.last.station}", play_url(Station.find_by_name(Song.last.station)), :id => "curstation" %>
		  <% end %>
		  <span id="lovedicon">
			<% if Song.last.rating == 1 %>
		      <3
			<% end %>
		  </span>
	    <% else %>
		  Pianobar Control Server
		  <span id="lovedicon"></span>
		<% end %>
	  </span>
	</div>
  </div>
</div>



