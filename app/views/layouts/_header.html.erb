<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container-fluid">
	<div class="navbar-header">
	  <span class="navbar-brand song-label" id="currentsong">
	    <% if Song.last %>
	      <%= link_to( image_tag( Song.last.art, :alt => "Album Art", :size => "24x24", :id => "cursongart"), song_art_url, :id => "cursongarturl" ) %>
