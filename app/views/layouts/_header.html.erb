<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container-fluid">
	<div class="navbar-header">
	  <span class="navbar-brand song-label" id="currentsong">
	    <% if Song.last %>
	      <%= link_to( image_tag( Song.last.art, :alt => "Album Art", :size => "24x24", :id => "cursongart"), song_art_url, :id => "cursongarturl" ) %>
		  <%= link_to "#{Song.last.title} by #{Song.last.artist} on #{Song.last.album}", Song.last.detail, :id => "cursongdescription" %>
		  <% if nil != Song.last.station && !Song.last.station.empty? %>
		    Station:
		    <%= link_to "#{Song.last.station}", play_url(Station.find_by_name(Song.last.station)), :id => "curstation" %>
		  <% end %>
		    <span id="lovedicon" class="glyphicon glyphicon-heart"
			<% if Song.last.rating == 1 %>
			style="display:none;"
			<% end %>
			/>
	    <% else %>
		  Pianobar Control Server
		  <span id="lovedicon"></span>
		<% end %>
	  </span>
	</div>
	<ul class="nav navbar-nav navbar-right"> 
		<% if signed_in? %>
          <li id="fat-menu" class="dropdown">
		    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
			  Account <b class="caret"></b>
		    </a>
		    <ul class="dropdown-menu">
			  <li><%= link_to "Profile", current_user %></li>
			  <li><%= link_to "Settings", '#' %></li>
			  <li class="divider"></li>
			  <li>
			    <%= link_to "Sign out", signout_path, method: "delete" %>
			  </li>
		    </ul>
		  </li>
		<% else %>
	      <li> <%= link_to "Sign in", signin_path %></li>
		<% end %>
	</ul>
  </div>
</div>

