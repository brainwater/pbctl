          <li><%= link_to image_tag("multimedia-player-2.png", title: "Song List", alt: "Song List"), song_index_url %></li>
          <li><%= link_to image_tag("format-justify-fill-5.png", title: "Station List", alt: "Station List"), stations_url %></li>
        </ul>
      </nav>
    </div>
  </div>
</header>
