<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
	  <% cursong = Song.last %>
	  <%= link_to( image_tag( cursong.art, :alt => "Album Art", :size => "36x36" ), song_art_url) %>
	  <%= link_to "#{cursong.title} by #{cursong.artist} on #{cursong.album}", cursong.detail %>
	  <% if nil != cursong.station && !cursong.station.empty? %>
	    Station:
	    <%= link_to "#{cursong.station}", play_url(Station.find_by_name(cursong.station)) %>
	  <% end %>
	  <% if cursong.rating == 1 %>
		  <3
	  <% end %>
	  <br/>
        <ul class="nav pull-right">
          <li><%= link_to image_tag("media-playback-start-5.png", title: "Start", alt: "Start"), "", id: "mediastart", onclick: "$.post('#{song_start_url}');" %></li>
          <li><%= link_to image_tag("media-playback-pause-5.png", title: "Pause", alt: "Pause"), "", id: "mediapause", onclick: "$.post('#{song_pause_url}');" %></li>
          <li><%= link_to image_tag("media-skip-forward-5.png", title: "Skip", alt: "Skip"), "", id: "mediaskip", onclick: "$.post('#{song_skip_url}');" %></li>
          <li><%= link_to image_tag("audio-volume-low-2.png", title: "Lower Volume", alt: "Lower Volume"), "", id: "mediavoldown", onclick: "$.post('#{song_voldown_url}');" %></li>
          <li><%= link_to image_tag("audio-volume-high-2.png", title: "Raise Volume", alt: "Raise Volume"), "", id: "mediavolup", onclick: "$.post('#{song_volup_url}');" %></li>
          <li><%= link_to image_tag("face-smile-3.png", title: "Like Song", alt: "Like Song"), "", id: "medialike", onclick: "$.post('#{song_like_url}');" %></li>
          <li><%= link_to image_tag("face-plain-2.png", title: "Tired of Song", alt: "Tired of Song"), "", id: "mediatired", onclick: "$.post('#{song_tired_url}');" %></li>
          <li><%= link_to image_tag("face-sad-3.png", title: "Dislike Song", alt: "Dislike Song"), "", id: "mediadislike", onclick: "$.post('#{song_dislike_url}');" %></li>
